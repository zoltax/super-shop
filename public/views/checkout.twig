{% extends "base.html" %}

{% block title %} Checkout {% endblock %}

{% block content %}

<div class="row">
    <div class="col-md-8">
        <img class="img-responsive img-rounded" src="http://placehold.it/900x350" alt="">
    </div>
    <div class="col-md-4">
        <h1>{{ product.getName() }} £{{ product.price }}</h1>
        <p> {{  product.description }}</p>
        <form action="/order" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control btn btn-default" name="email" placeholder="Email">
            </div>
            <input type="hidden" id="id" name="id" value="{{ product.id }}">

            <button type="submit" class="btn btn-default">I hereby confirm I have paid £({{ product.price }}) !</button>

        </form>
    </div>
</div>

<hr>

<div class="row">
    <div class="col-lg-12">
        <div class="well text-center">
            This is a well that is a great spot for a business tagline or phone number for easy access!
        </div>
    </div>
</div>

{% endblock %}


